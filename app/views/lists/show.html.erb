<h1>List</h1>
<% if @list.photo.attached? %>
  <%= cl_image_tag @list.photo.key, width: 400, height: 300, crop: :fill %>
  <% end %>
<h2><%= @list.name %></h2>
<% @list.bookmarks.each do |bookmark| %>
<li>
<%= bookmark.movie.title %>
<%= bookmark.movie.overview %>
<%= image_tag bookmark.movie.poster_url, alt: bookmark.movie.title, width: 200 %>
  <%= bookmark.comment %>
      <%= link_to "Remove",
                  bookmark_path(bookmark),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
</li>
<% end %>
<%= link_to "Add a bookmark", new_list_bookmark_path(@list), class: "btn btn-primary"%>
<br>
<br>
<%= link_to "Back to lists", root_path, class: "btn btn-primary"%>
